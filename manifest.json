{
    "manifest_version": 2,
    "name": "Mosaify",
    "version": "1.0",
    "description": "Apply a mosaic effect on selected areas of the screen.",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ]
  }
  