{
    "manifest_version": 3,
    "name": "Mosaify",
    "version": "1.0",
    "description": "Apply a mosaic effect on selected areas of the screen.",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  